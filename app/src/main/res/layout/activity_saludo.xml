<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lytContenedorSaludo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaludoActivity"
    android:orientation="vertical"
    android:background="@color/backgroundcolor">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"/>

    </RelativeLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/web"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circulopurpura"
                    android:padding="10dp"
                    android:src="@drawable/ic_desktop_windows_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Web"
                    android:textColor="@color/deerpurple"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/deerpurple" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="https://ecopilas.es/" />

            </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/telefono"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/circulorosa"
                        android:padding="10dp"
                        android:src="@drawable/ic_phone_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Llámanos"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/colorAccent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="914 170 890"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:id="@+id/correo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circuloamarillo"
                    android:padding="10dp"
                    android:src="@drawable/ic_mail_outline_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Correo Electrónico"
                    android:textStyle="bold"
                    android:textColor="@color/yello"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/yello" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="info@ecopilas.es"
                     />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circuloverde"
                    android:padding="10dp"
                    android:src="@drawable/ic_tag_faces_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Redes Sociales"
                    android:textStyle="bold"
                    android:textColor="@color/green" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/green" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/facebook"
                        android:layout_width="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/facebook"/>
                    <ImageView
                        android:id="@+id/twitter"
                        android:layout_width="25dp"
                        android:layout_marginLeft="3dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/twitter"/>
                    <ImageView
                        android:id="@+id/linkedin"
                        android:layout_width="25dp"
                        android:layout_marginLeft="3dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/linkedin"/>
                    <ImageView
                        android:id="@+id/googleplus"
                        android:layout_width="25dp"
                        android:layout_marginLeft="3dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/googleplus"/>
                    <ImageView
                        android:id="@+id/youtube"
                        android:layout_width="25dp"
                        android:layout_marginLeft="3dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/youtube"/>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/lytContenedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:visibility="visible">

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#008000"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:textSize="15dp"
                android:onClick="buttonClick"
                android:text="Inicio"
                android:textColor="#ffffff"
                android:drawableLeft="@drawable/ic_home_black_24dp"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#008000"
                android:onClick="buttonClick"
                android:text="Mapa"
                android:textColor="#ffffff"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:textSize="15dp"
                android:drawableLeft="@drawable/ic_map_black_24dp"/>

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#008000"
                android:onClick="buttonClick"
                android:text="Contacto"
                android:textColor="#ffffff"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:drawableLeft="@drawable/ic_contact_phone_black_24dp"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>